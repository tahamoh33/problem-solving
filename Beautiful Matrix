#include<iostream>
#include<vector>
#include<algorithm>
using namespace std;
int main(){
int arr[5][5];
int indexi=0;
int indexj=0;
int res=0;
for(int i=0;i<=4;i++){
    for(int j=0;j<=4;j++){
        cin>>arr[i][j];
 
    }
}
for(int i=0;i<=4;i++){
    for(int j=0;j<=4;j++){
        if(arr[i][j]==1){
            indexi=i+1;
            indexj=j+1;
        }
    }
}
res=abs(indexi-3)+abs(indexj-3);
 
cout<<res<<endl;
 
 
 
    return 0;
}
