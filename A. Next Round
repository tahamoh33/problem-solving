#include<iostream>
using namespace std;
int main(){
    int n,m;
    cin>>n>>m;
    int num[n];
    int counter=0;
    for(int i=0;i<n;i++){
        cin>>num[i];
        }
 
    for(int i=0;i<n;i++){
        if(num[i]>=num[m-1] && num[i]>0){
            counter++;
        }
    }
    cout<<counter<<endl;
 
    return 0;
}
